// Adicione ao script 5 variáveis do tipo booleana e adicione valores true ou false. Ao final mostre para o usuário os valores de cada variável. //

lampada1="mastigada"
lampada2="mastigada"
lampada3="msatigada"
lampada4="mastigada"
lampada5="mastigada"

pesquisa1= true
pesquisa2= false
pesquisa3= false
pesquisa4= true
pesquisa5= true

v1 = isAtivo= pesquisa1
v2 = isAtivo= pesquisa2
v3 = isAtivo= pesquisa3
v4 = isAtivo= pesquisa4
v5 = isAtivo= pesquisa5

const verificar =function(ligada, v){
    if(v == true){
        return "Caso: "+ ligada +", falsa"
    }
    else{
        return "Caso: "+ ligada +", verdadeira"
    }
}

console.log(verificar(lampada1, v1))
console.log(verificar(lampada2, v2))
console.log(verificar(lampada3, v3))
console.log(verificar(lampada4, v4))
console.log(verificar(lampada5, v5))

